@model Recipe
@{
    ViewData["Title"] = "Recipe Detail";

    <h1>Recipe Detail</h1>

    <div id="recipes">
        
        <img src="~/images/@Model.ImageName" alt="No image" />
        
        <div id="basic-info">
            <h1>@Model.Name</h1>
            <h3>@Model.RecipeType</h3>
            <p><span class="bold">Cook Time</span> @Model.CookTimeInMinutes minutes</p> 
            <p>@Model.Description</p>
        </div>
        <h2>Ingredients</h2>
        <ul>
            @{
                foreach (Ingredient ingredient in Model.Ingredients)
                {
                        <li>@ingredient.Quantity @ingredient.Name</li>
                }
             
            }

        </ul>

        <h2>Preparation</h2>
        <ol>
            @{
                for (int i = 0; i < Model.PreparationSteps.Count(); i++)
                {
                    
                    <li>@Model.PreparationSteps[i]</li>
                }

            }
        </ol>
</div>

     }
